<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts}}

<article class="{{post_class}}">
	<div class="inner">
		<header class="post-header">
		{{#if image}}
			<div class="mrl-post-banner" style="background-image:url({{image}});
				background-repeat: no-repeat; 
				background-position: center center;
			    -webkit-background-size: cover;
			    -moz-background-size: cover;
			    -o-background-size: cover;
			    background-size: cover;
			    	height: 16em;
				width: 100%;">
				<div class="filler-link">
					<a href="{{url}}"></a>
				</div>
			</div>
			{{/if}}
<!-- 			<div class="mrl-post-banner">
				<img class="{{#if image}} homepage-img" src="{{image}}{{/if}}"></a>
			</div> -->

<!--             <a href="{{url}}"><img class="{{#if image}} homepage-img" src="{{image}}{{/if}}"></a> -->
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
<!-- 			<span class="post-meta">{{author}} {{tags prefix=" on " separator=", "}} | <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></span> -->
			<div class="clear"></div>
		</header>

		<section class="post-excerpt">
			<p>{{excerpt}}&hellip;</p>
		</section>
	</div>
</article>

{{/foreach}}

{{pagination}}